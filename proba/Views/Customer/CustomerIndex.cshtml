@model IEnumerable<proba.EntityFramework.Customer>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@section admin
{
<table>
    <tr>
        <th>
            Név
        </th>
        <th>
            Felhasználó név
        </th>
        <th>
            E-mail cím
        </th>
        <th>
            Jelszó
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.ActionLink("Szerkesztés", "EditCustomer", new { id=item.id }) |
            @Html.ActionLink("Törlés", "DeleteCustomer", new { id=item.id })
        </td>
    </tr>
}
</table>
}