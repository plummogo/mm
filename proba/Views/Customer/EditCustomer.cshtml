@model proba.EntityFramework.Customer

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section admin
{
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Customer</legend>

            @Html.HiddenFor(model => model.id)
            <div class="editor-label">
                <p>Teljes név</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>

            <div class="editor-label">
                <p>E-mail cím</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>

            <div class="editor-label">
                <p>Születési dátum</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.dateofbirth)
                @Html.ValidationMessageFor(model => model.dateofbirth)
            </div>

            <div class="editor-label">
                <p>Teljes lakcím</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.address)
                @Html.ValidationMessageFor(model => model.address)
            </div>

            <div class="editor-label">
                <p>Felhasználó név</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.username)
                @Html.ValidationMessageFor(model => model.username)
            </div>

            <div class="editor-label">
                <p>Jelszó</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.password)
                @Html.ValidationMessageFor(model => model.password)
            </div>

            <div class="editor-label">
                <p>Fizetett felhasználó-e</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.paid)
                @Html.ValidationMessageFor(model => model.paid)
            </div>

            <div class="editor-label">
                <p>Ár</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.price)
                @Html.ValidationMessageFor(model => model.price)
            </div>

            <p>
                <input type="submit" value="Szerkeszt" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Vissza", "CustomerIndex")
    </div>
}