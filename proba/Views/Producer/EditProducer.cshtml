@model proba.EntityFramework.Producer

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section admin
{
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend style="text-align:center">Fékbetét és fékdob gyártók</legend>

            @Html.HiddenFor(model => model.id)

            <div class="editor-label">
                <p>Gyártó</p>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.producer1)
                @Html.ValidationMessageFor(model => model.producer1)
            </div>

            <div class="editor-label">
                <p>Kategória</p>
            </div>
            <div class="editor-field">
                @Html.HiddenFor(model => model.Category.id)
                @Html.EditorFor(model => model.Category.categoryname)
                @Html.ValidationMessageFor(model => model.Category.categoryname)
            </div>

            <p>
                <input type="submit" value="Szerkeszt" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Vissza", "ProducerIndex")
    </div>
}
